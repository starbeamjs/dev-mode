{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "types": ["node"],
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "dist",
    "verbatimModuleSyntax": true
  }
}
